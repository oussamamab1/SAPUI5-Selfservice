<mvc:View
    controllerName="sapselfservice.controller.EmployeeDirectory"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page title="Mitarbeiterverzeichnis">
        <content>

            <!-- Suchfeld zum Filtern nach Name oder Rolle -->
            <SearchField
                width="100%"
                placeholder="Mitarbeiter oder Rolle suchen..."
                liveChange=".onSearchChanged"
                showSearchButton="true" 
            />

            <!-- (Optional) Button, um den vollen Datensatz wieder herzustellen -->
            <Button
                id="idAlleAnzeigenButton"
                text="Alle anzeigen"
                press=".onResetSearch"
                width="auto"
                style="Transparent"
            />

            <!-- Tabelle mit Daten aus dem Model 'employees' -->
            <Table id="idEmployeeTable" items="{employees>/}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="MitarbeiterÃ¼bersicht" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Vorname" />
                    </Column>
                    <Column>
                        <Text text="Nachname" />
                    </Column>
                    <Column>
                        <Text text="Rolle" />
                    </Column>
                    <Column>
                        <Text text="E-Mail" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{employees>Vorname}" />
                            <Text text="{employees>Nachname}" />
                            <Text text="{employees>role}" />
                            <Text text="{employees>Email}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
