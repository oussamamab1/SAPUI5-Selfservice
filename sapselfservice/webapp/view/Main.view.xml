<mvc:View
    controllerName="sapselfservice.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout.cssgrid">

    <App id="id.selfServiceApp">
        <Page id="id.2Page" title="Startseite" titleAlignment="Center">
            <content>
                <l:CSSGrid
                    id="idSelfServiceGrid"
                    class="gridSpacing"
                    gridTemplateColumns="repeat(auto-fit, minmax(250px, 1fr))"
                    gridGap="16px">

                    <GenericTile id="id.MangerGenericTile" class="largeTile" header="Mitarbeiterdatenmanagement" subheader="Mitarbeiterdatenmanagement"  press="onGenericTileEmployeeDataPress">
                        <TileContent id="id.ManagerTileContent">
                            <ImageContent id="id.ManagerImageContent" src="sap-icon://activity-individual" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.15GenericTile" class="largeTile" header="Meine Abwesenheitsanträge" subheader="Meine Abwesenheitsanträge anzeigen" press="onGenericTileAbsencesPress">
                        <TileContent id="id.7AbsencesTileContent">
                            <ImageContent id="id.8AbsencesImageContent" src="sap-icon://general-leave-request" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.14GenericTile" class="largeTile" header="Meine Zeiterfassung" subheader="Meine Zeiterfassung anzeigen" press="onGenericTileTimeTrackingPress">
                        <TileContent id="id.10TimeCorrectionsTileContent">
                            <ImageContent id="id.11TimeCorrectionsImageContent" src="sap-icon://date-time" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.16GenericTile" class="largeTile" header="Meine Schulungen" subheader="Schulungen anzeigen" press="onGenericTileTrainingPress">
                        <TileContent id="id.30TrainingTileContent">
                            <ImageContent id="id.26TrainingImageContent" src="sap-icon://education" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.9GenericTile" class="largeTile" header="Mein Profil" subheader="Profil anzeigen" press="onGenericTileProfilePress">
                        <TileContent id="id.25ProfileTileContent">
                            <ImageContent id="id.26ProfileImageContent" src="sap-icon://employee" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.12GenericTile" class="largeTile" header="Meine Entgeltnachweise" subheader="Entgeltnachweise anzeigen" press="onGenericTilePayStatementsPress">
                        <TileContent id="id.16PayStatementsTileContent">
                            <ImageContent id="id.17PayStatementsImageContent" src="sap-icon://customer-financial-fact-sheet" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.8GenericTile" class="largeTile" header="Mitarbeiter-VZ" subheader="Mitarbeiter abfragen" press="onGenericTileEmployeeDirectoryPress">
                        <TileContent id="id.28EmployeeDirectoryTileContent">
                            <ImageContent id="id.29EmployeeDirectoryImageContent" src="sap-icon://people-connected" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.5GenericTile" class="largeTile" header="Meine Lohnsteuerbescheinigungen" subheader="Anzeigen" press="onGenericTileTaxStatementsPress">
                        <TileContent id="id.37TaxStatementsTileContent">
                            <ImageContent id="id.38TaxStatementsImageContent" src="sap-icon://expense-report" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.4GenericTile" class="largeTile" header="elek. Personalakte" subheader="Akten anzeigen" press="onGenericTilePersonnelFilePress">
                        <TileContent id="id.40PersonnelFileTileContent">
                            <ImageContent id="id.41PersonnelFileImageContent" src="sap-icon://business-card" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile id="id.1GenericTile" class="largeTile" header="Meine Familienmitglieder" subheader="Meine Familienmitglieder anzeigen" press="onGenericTileFamilyMembersPress">
                        <TileContent id="id.49FamilyMembersTileContent">
                            <ImageContent id="id.50FamilyMembersImageContent" src="sap-icon://family-care" />
                        </TileContent>
                    </GenericTile>
                </l:CSSGrid>
            </content>
        </Page>
    </App>
</mvc:View>
