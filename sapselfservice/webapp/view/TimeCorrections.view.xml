<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sapselfservice.controller.TimeCorrections">

    <Page title="Zeitkorrektur">
        <content>
            <VBox class="sapUiSmallMargin">
                <!-- Kommen/Gehen Auswahl -->
                <Label text="Art der Korrektur:" />
                <SegmentedButton id="correctionTypeSelect">
                    <Button text="Kommen" customData="{type: 'kommen'}" />
                    <Button text="Gehen" customData="{type: 'gehen'}" />
                </SegmentedButton>

                <!-- Datumsauswahl -->
                <Label text="Datum:" />
                <DatePicker id="datePicker" placeholder="dd.MM.yyyy" valueFormat="HH:mm:ss"  displayFormat="HH:mm"/>

                <!-- Zeitauswahl -->
                <Label text="Zeit:" />
                <TimePicker id="timePicker" placeholder="hh:mm" />
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Speichern" type="Emphasized" press="onSaveTimeCorrection" />
                <Button text="Abbrechen" press="onCancelTimeCorrection" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
